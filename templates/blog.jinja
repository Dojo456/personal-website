{% extends "base.jinja" %}

{% block head %}
<link rel="stylesheet" type="text/css" href="https://unpkg.com/pell/dist/pell.min.css">
{% endblock %}

{% block title %}Blog{% endblock %}

{% block content %}

{% if alt_title %}
<h1 class="p-0 text-4xl font-bold">{{ alt_title }}</h1>
{% else %}
<h1 class="p-0 text-4xl font-bold">Welcome to my blog!</h1>
{% endif %}
{% if alt_description %}
<p class="text-center">{{ alt_description }}</p>
{% else %}
<p class="text-center">I kinda just write random stuff that comes to my mind.</p>
{% endif %}


{% for post in posts %}
<hr class="h-px my-8 bg-gray-200 border-0 dark:bg-gray-700">
<div class="flex flex-col">
    <p class="text-sm">{{ post.created.strftime("%B %d, %Y") }}</p>
    <h2 class="text-3xl font-bold">{{ post.title }}</h2>
    <br>
    <div class="text-md">{{ post.content | safe }}</div>
</div>
{% endfor %}


{% endblock %}